<div>
<h1>{{listings.title}}</h1>  
<h2>Listing created by User <a href="http://localhost:3000/ProfilePage/{{username}}" target="_blank">{{username}}</a></h2>
{{#each listings.attachments}}
    <img alt="img" src="{{this}}">
{{/each}} 
</div>
<div class="row">
<div class="column">   
    <h1>Listing Information</h1> <ul class="search">  
                            <li class="search">Product Name: {{listings.title}}</li>
                            <li class="search">Lisitng type: {{listings.listingType}}</li>
                            <li class="search">Condition: {{listings.mainCondition}}</li>
                            <li class="search">
                                Secondary conditions:
                                <ul>
                                {{#each listings.secondaryCondition}}
                                    <li>{{this}}</li>
                                {{/each}}
                                </ul> 
                            </li>
                            <li class="search">Description: {{listings.description}}</li>
                            {{#if check}}
                                <li class="search">Price: ${{listings.price}}</li>
                                <li class="search">Shipping: ${{listings.shippingPrice}}</li>
                                <li class="search">Shipping Methods: {{listings.shippingMethods}}</li>
                            {{else}}
                            {{/if}}
                            {{#if tradeCheck}}
                            <li class="search">
                                Viable Trade Options:
                                <ul>   
                                {{#each listings.trades}}
                                    <li>{{this}}</li>
                                {{/each}}
                                </ul>   
                            </li>
                            {{else}}
                            <li class="search">No Trade Options Given</li>
                            {{/if}}
                            <li class="search">Return Policy: {{listings.returnPolicy}}</li>
                            <li class="search">Last time updated: {{listings.timeStampUpdated}}</li>
                        </ul>
</div>
<div class="column">
                    {{#if chart}}
                        <h1>Game listing on Price Charts</h1><ul class="search">
                            <li class="search">Product Name: {{chart.title}}</li>
                            <li class="search">Release Date: {{chart.releaseDate}}</li>
                            <li class="search">Console Name: {{chart.consoleName}}</li>
                            <li class="search">Genre: {{chart.genre}}</li>
                            <li class="search">Price Chart ID: {{chart.id}}</li>
                            <li class="search">Box Only Price: ${{chart.boxPrice}}</li>
                            <li class="search">Complete in Box Price: ${{chart.cibPrice}}</li>
                            <li class="search">Game Only Price: ${{chart.loosePrice}}</li>
                            <li class="search">Manual Only Price: ${{chart.manualPrice}}</li>
                            <li class="search">New in Box Price: ${{chart.newPrice}}</li>
                            <li class="search">Graded Price: ${{chart.gradedPrice}}</li>
                        </ul><br>
                    {{else}}
                    {{/if}}
                </div><br>
</div>

{{#if ownPoster}}
    <div class="btn-group">
    <button class="purchase" onclick="window.location.href = 'http://localhost:3000/choice/{{listings._id}}'">{{type}}</button>
    </div>
{{else}}
{{/if}}
<div>
    <h2>Current Offers</h2>
    {{#if offers}}
        <ul class="search">
        {{#each offers}}
        <li class="search">
            <p>Offer From User: {{this.username}}</p>
            <p>Offer Product: {{this.title}}</p>
            <p>Offer Description: {{this.desc}}</p>
            {{#if ownPoster}}
            
            {{else}}
                <button onclick="window.location.href = 'http://localhost:3000/takeOffer/{{this.listingId}}'">Take Offer</button>
            {{/if}}
        </li>
        {{/each}}
        </ul>
    {{else}}
    <p>No Offers Currently</p>
    {{/if}}
</div>
{{#if listings.comments}}
    <h3>Comments</h3>
    {{#each listings.comments}}
        <p>{{this.username}}: {{this.content}}</p>
    {{/each}}
{{else}}
    <h3>No Comments</h3>
{{/if}}
<p id="errorComment" hidden></p>
<form method="POST" id="comment-form">
<label for="commentInput">Leave a comment:</label>
 <textarea id="commentInput" name="commentInput"></textarea><br>
  <button type="submit">Submit</button>
 </form>
<script src="../public/js/commentCheck.js"></script>
                        
