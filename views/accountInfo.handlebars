                <label for="returnPolicyInput">Return Policy:</label>
                <textarea id="returnPolicyInput" type="text" name="returnPolicyInput"></textarea><br><br>
                <button type="submit">Register</button> --}}
            </form>
            </li>
        {{/each}}
            </ul>
            <h3>Sales History</h3>
            <ul class="search">
        {{#each user.salesHistory}}
            <li>
                <p>User sold to: <a href="http://localhost:3000/{{this.username}}" target="_blank">{{this.username}}</a></p>
                <p>Item sold: {{this.title}}</p>
                <p>Price sold for: {{this.price}}</p>
            </li>
        {{/each}}
            </ul>
        </div>
        <h2>Overall Rating: {{user.overallRating}}</h2>
    </div>
    

    <button style="width:25%" onclick="window.location.href = 'http://localhost:3000/PriceChartSearch'">Create Listing</button>